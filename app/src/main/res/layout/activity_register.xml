<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="370dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text="填写以下信息，完成注册"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:text="用户名:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editText_register_name"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="56dp"
        android:hint="用户名"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="密    码:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editText_register_password"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:hint="密码"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_name" />

    <Button
        android:id="@+id/button_register_success"
        android:layout_width="77dp"
        android:layout_height="37dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="50dp"
        android:text="注册"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button_register_back"
        android:layout_width="77dp"
        android:layout_height="37dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="返回"
        app:layout_constraintStart_toEndOf="@+id/button_register_success"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_password" />

</android.support.constraint.ConstraintLayout>

